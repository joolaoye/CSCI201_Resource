int* check_diff(int* a, int* b, int& nums){
	int count = 0;

	for (int i = 0; i < SIZE; i++){
		if (a[i] != b[i]){
			count++;
		}
	}
	
	int* diff = new int[count];
	int diffindex = 0;
	
	for (int i = 0; i < SIZE; i++){
